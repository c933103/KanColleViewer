<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LynLogger.Settings" 
             x:Class="LynLogger.Settings.SettingsView" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.DataContext>
        <local:SettingsModel/>
    </UserControl.DataContext>
    <TextBlock Margin="5">
        <Run Text="基本信息记录间隔" />
        <InlineUIContainer><TextBox Text="{Binding BasicInfoLoggingInterval}" MinWidth="50" TextAlignment="Right"/></InlineUIContainer>
        <Run Text="秒" />
        <LineBreak />
        <Run Text="舰娘信息记录间隔" />
        <InlineUIContainer><TextBox Text="{Binding ShipDataLoggingInterval}" MinWidth="50" TextAlignment="Right"/></InlineUIContainer>
        <Run Text="秒" />
        <LineBreak />
        <LineBreak />
        <Run Text="数据清理"/>
        <LineBreak />
        
    </TextBlock>
</UserControl>
